<!--PHPUnit unit tests. -->
<!--Can also be run by calling vendor/bin/phpunit &#45;&#45;configuration phpunit-unit.xml-->
<!--See: http://stackoverflow.com/questions/9535078/phpunit-different-bootstrap-for-all-testsuites -->
<!--See: https://www.bountysource.com/issues/26548046-trouble-getting-a-simple-check-to-work comment by johnpbloch-->
<phpunit
	bootstrap="tests/unit/bootstrap.php"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    >
	<testsuites>
		<testsuite>
			<directory prefix="test-" suffix=".php">./tests/unit/</directory>
		</testsuite>
	</testsuites>
</phpunit>
